<suite name="colsubcidio">
    <listeners>
        <listener class-name="execution.listeners.ListenerClass"/>
        <listener class-name="execution.listeners.RetryListener"/>
    </listeners>
    <test name="simulator_free_credit">
        <classes>
            <parameter name="url"
                       value="https://nginx-transacciones.platform-test-external.colsubsidio.com/creditos/simulador/libre-inversion/identificate"/>
            <class name="execution.tests.SimulatorFreeCreditTest"/>
        </classes>
    </test>
    <test name="simulator_quota_credit_flow1">
        <classes>
            <parameter name="url"
                       value="https://transacciones.colsubsidio.com/creditos/simulador/cupo-de-credito/identificate"/>
            <parameter name="path" value="optionNumberNQuotas"/>
            <class name="execution.tests.SimulatorQuotaCreditTest"/>
        </classes>
    </test>

    <test name="simulator_quota_credit_flow2">
        <classes>
            <parameter name="url"
                       value="https://transacciones.colsubsidio.com/creditos/simulador/cupo-de-credito/identificate"/>
            <parameter name="path" value="optionNumberAmount"/>
            <class name="execution.tests.SimulatorQuotaCreditTest"/>
        </classes>
    </test>
    <test name="Request Quota Credit">
        <classes>
            <parameter name="url"
                       value="https://nginx-transacciones.platform-test-external.colsubsidio.com/creditos/solicitud/cupo-de-credito/onboarding"/>
            <parameter name="path" value="optionNumberAmount"/>
            <class name="execution.tests.RequestQuotaCreditTest"/>
        </classes>
    </test>
</suite>